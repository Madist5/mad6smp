  <script>
    function renderPayPalButton(id, amount, crateName) {
      paypal.Buttons({
        createOrder: function(data, actions) {
          return actions.order.create({
            purchase_units: [{
              amount: { value: amount },
              description: crateName + ' Key'
            }]
          });
        },
        onApprove: function(data, actions) {
          return actions.order.capture().then(function(details) {
            alert(crateName + ' Key purchased successfully!');
            // Here, you can send data to your Minecraft server to give the player the key.
          });
        }
      }).render(id);
    }

    renderPayPalButton('#paypal-seasonal', '2.00', 'Seasonal Crate');
    renderPayPalButton('#paypal-spawner', '3.00', 'Spawner Crate');
    renderPayPalButton('#paypal-mythic', '5.00', 'Mythic Crate');
    renderPayPalButton('#paypal-ultra', '10.00', 'Ultra Crate');
  </script>
